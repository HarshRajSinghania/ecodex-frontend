{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.7.1",
    "react-scripts": "5.0.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "serve": "^14.2.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "serve -s build -l 3000",
    "start:dev": "HOST=0.0.0.0 react-scripts start",
    "start:https": "HOST=0.0.0.0 HTTPS=true SSL_CRT_FILE=../certs/network-cert.pem SSL_KEY_FILE=../certs/network-key.pem react-scripts start",
    "start:localhost": "HTTPS=true SSL_CRT_FILE=../certs/cert.pem SSL_KEY_FILE=../certs/key.pem react-scripts start",
    "build": "react-scripts build && npm run build:pwa",
    "build:pwa": "npm run copy-sw && npm run generate-icons",
    "copy-sw": "cp public/sw.js build/sw.js",
    "generate-icons": "echo 'Icons already available in public folder'",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lighthouse": "lighthouse http://localhost:3000 --view --chrome-flags='--headless'",
    "pwa-audit": "lighthouse http://localhost:3000 --only-categories=pwa --view"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
